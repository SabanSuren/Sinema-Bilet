<script>
    $(function () {
        $('.sepeteEkle').on('click', function () {
            debugger;
            $.ajax({
                url: "/Sepet/SepeteEkle",
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                data: JSON.stringify({
                    urun_id: "@Model.FilmId",

                    adet : $("#qty").val()
                    @*fiyat : "@Model.SatisFiyat",
                    IndirimliFiyat: "@Model.IndirimliFiyat",
                    adet: $("#qty").val()*@
                }),
                async: false
            }).done(function (data) {
                if (data === "true") {
                    window.location.replace('/Bilet/BiletListele');
                }
                else {
                    window.location.replace('/Checkout/AddressAndPayment');
                }
            });
       });
   });
</script>