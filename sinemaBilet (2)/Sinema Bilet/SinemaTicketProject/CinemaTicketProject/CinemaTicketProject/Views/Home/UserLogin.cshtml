@model CinemaTicketProject.Models.Musteri

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/Sin.cshtml";
}
<br />
<h2 style="text-align:center; ">
    Pix Cinema Club'a Hoş Geldin <br />
    Bilet Almak İçin Giriş Yap
</h2>
<hr />
@using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))
{
<div style="width:800px;padding-left:270px;" class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            E-mail:
            @Html.EditorFor(model => model.MusteriEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusteriEmail, "*", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Şifre:
            @Html.EditorFor(model => model.MusteriSifre, new { htmlAttributes = new { @class = "form-control", type = "password" } })
            @Html.ValidationMessageFor(model => model.MusteriSifre, "*", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <span style="color:orangered;">@Session["Hata"]</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Giriş Yap" class="btn btn-sm btn-success" />

        </div>
    </div>
</div>
}
