@model CinemaTicketProject.Models.Musteri

@{
    ViewBag.Title = "MusteriKayit";
    Layout = "~/Views/Shared/Sin.cshtml";
}
<br />
<h2 style="text-align:center;"> Pix Cinema Club'a Üye Ol </h2>
<hr />


@using (Html.BeginForm())
{


    <div style="width:800px;padding-left:270px;" class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Ad:
                @Html.EditorFor(model => model.MusteriAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusteriAdi, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                Soyad:
                @Html.EditorFor(model => model.MusteriSoyad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusteriSoyad, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Email:
                @Html.EditorFor(model => model.MusteriEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusteriEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                Şifre:
                @Html.EditorFor(model => model.MusteriSifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusteriSifre, "*", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Üye Ol" class="btn btn-sm btn-success" />
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
}

