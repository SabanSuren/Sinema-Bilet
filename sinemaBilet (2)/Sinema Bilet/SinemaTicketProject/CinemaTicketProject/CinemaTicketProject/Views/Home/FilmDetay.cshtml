                    <p class="card-text"><small class="text-muted">@Model.FilmFiyat <b>TL</b></small></p>
                    <div class="btn-group">
                        @Html.ActionLink("Bilet Al", "UserLogin", "Home", new { model = Model }, new { @class = "btn btn-default btn-dark" })

                    </div>
                </div>
            </div>
        </div>
       

    </div>
</div>

