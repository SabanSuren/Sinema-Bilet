@model IEnumerable<CinemaTicketProject.Models.Salon>

@{
    ViewBag.Title = "Salon";
    Layout = "~/Views/Shared/Sin.cshtml";
}
<br />
<h2 style="text-align:center; ">Ayrıcalıklı Salonlar</h2>
<hr />
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var salon in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/Images/@salon.SalonResim" height="250" width="350" class="img-responsive" />
                        <div class="card-body">
                            <b class="card-text">@salon.SalonAdi</b>
                            <p class="card-text">@salon.SalonSlogan</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @Html.ActionLink("İncele", "SalonDetay", "Home", new { id = salon.SalonId }, new { @class = "btn btn-sm btn-success" })
                                   </div>
                              
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
